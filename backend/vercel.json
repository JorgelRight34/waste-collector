{
  "version": 2,
  "builds": [
    {
      "src": "wasteCollector/wsgi.py",  
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python3.9" 
      }
    },
    {
      "src": "build_files.sh",  
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build" 
      }
    }
  ],
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    },
    {
      "source": "/(.*)",
      "destination": "wasteCollector/wsgi.py"  
    }
  ],
  "headers": [
  ]
}
